<!-- Sign In Modal -->
<div id="loginModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h3 id="myModalLabel">Log In</h3>
    </div>
    <div class="modal-body">
        <form class="form-horizontal" action="/login">
            <div class="control-group">
                <div class="controls">
                    <input type="text" id="inputWatchOut" name="inputLoginEmail" placeholder="Email or ID">
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <input type="password" id="inputWatchOut" name="inputLoginPassword" placeholder="Password">
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <button type="submit" class="btn">Log In</button>
                </div>
            </div>
        </form>
    </div>
    <div class="modal-footer">
        <a href="/auth/facebook" class="btn btn-primary">Connect to Facebook</a>
        <a href="/auth/google" class="btn btn-danger">Connect to Google+</a>
    </div>
</div>