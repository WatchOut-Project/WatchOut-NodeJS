<!-- Sign Up Modal -->
<div id="registerModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h3 id="myModalLabel">Register</h3>
    </div>
    <div class="modal-body">
        <form class="form-horizontal" action="/register">
            <div class="control-group">
                <div class="controls">
                    <input type="text" id="inputRegisterId" placeholder="ID">
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <input type="text" id="inputRegisterEmail" placeholder="Email">
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <input type="password" id="inputRegisterPassword" placeholder="Password">
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <button type="submit" class="btn">Register</button>
                </div>
            </div>
        </form>
    </div>
    <div class="modal-footer">
        <a href="/auth/facebook" class="btn btn-primary">Connect to Facebook</a>
        <a href="/auth/google" class="btn btn-danger">Connect to Google+</a>
    </div>
</div>